@model List<StudentUsingCore.Models.Student>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container row">
    <div class="col-8">
        <h2>Students</h2>
    </div>
    <div class="col-4 text-right">
        <a asp-action="Upsert" class="btn btn-info">Create New Student</a>
    </div>
    @if(Model.Count == 0) 
    {
        <div>
            <p>No students in Database</p>
        </div>
    }
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@item.ImageUrl" class="card-img-top rounded" width="100" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@item.Name</b></p>
                            <p class="card-title text-primary"><b>@item.RollNumber</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Class Studing: <b class="">@item.ClassStudying</b></p>
                        </div>
                    </div>
                    <div>
                        <a class="mb-2 btn btn-success form-control" asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger form-control" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
